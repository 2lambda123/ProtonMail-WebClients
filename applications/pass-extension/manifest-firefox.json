{
    "name": "Proton Pass",
    "description": "An end-to-end-encrypted password manager that protects your passwords and your personal email addresses via email aliases.",
    "version": "0.12.0",
    "manifest_version": 3,
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "file:///*"],
            "js": ["content.js"],
            "css": ["styles/content.css"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "permissions": ["webRequest", "storage", "activeTab", "privacy"],
    "host_permissions": ["https://*/*", "http://*/*", "ws://*/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/assets/protonpass-icon-16.png",
            "32": "/assets/protonpass-icon-32.png",
            "48": "/assets/protonpass-icon-48.png",
            "128": "/assets/protonpass-icon-128.png"
        }
    },
    "icons": {
        "16": "/assets/protonpass-icon-16.png",
        "32": "/assets/protonpass-icon-32.png",
        "48": "/assets/protonpass-icon-48.png",
        "128": "/assets/protonpass-icon-128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["*.html", "assets/*.png", "assets/*.svg", "assets/*.woff", "assets/*.woff2"],
            "matches": ["<all_urls>"]
        }
    ]
}
